<%= form_for :school, url: school_path, method: :PATCH do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_area :name %>
  </p>
 
  <p>
    <%= f.label :age %>
    <%= f.text_field :age %>
  </p>

  <p>
    <%= f.label :grade%>
    <%= f.text_field :grade%>
  </p>

  <p>
    <%= f.label :sex%>
    <%= f.text_field :sex%>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Cancel", schools_path%>